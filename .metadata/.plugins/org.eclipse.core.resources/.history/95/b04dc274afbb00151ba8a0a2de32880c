package human_exercises;

public class ClassOfStudents {
	
	Teacher teacher;
	Student[] students = new Student[15];
	String classSubject;
	
	public ClassOfStudents(Teacher teacher, Student[] students, String subject) {
		this.teacher = teacher;
		this.students = students;
		setClassSubject(subject);
	}
	
	
	public void setStudentsMarks(double marks){
		for(int i = 0; i < students.length; i++){
			if(marks > 1.99){
				this.students[i].setMark(marks);
			}else{
				this.students[i].setMark(2);
			}
		}
	}
	
	public void setClassSubject(String subject){
		
	}
	
}
