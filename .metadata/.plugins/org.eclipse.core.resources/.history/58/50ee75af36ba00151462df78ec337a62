//			if(tasks[i].)
//		}
//	}
	
	public boolean isAllWorkDone(){
		
		int count = 0;
		
		here: for(int i = 0; i < tasks.length; i++){
			
			if(tasks[i].getWorkingHoursToFinishTheTask() == 0){
				
				count += 1;
				
			}else{
				
				break here;
				
			}
		}
		
		if(count == 10){
			
			return true;
			
		}else{
			
			return false;
			
		}
	}
}
