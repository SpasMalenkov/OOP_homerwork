package warehouse;

public class Shop implements Runnable{
	
	private IWareHouse sklad;
	private Thread plodove;
	
	Shop(IWareHouse sklad, Thread plodove){
		this.sklad = sklad;
		this.plodove = plodove;
	}
	
	@Override
	public void run() {
		while(plodove.isAlive() || !sklad.isEmptyBanan()){
			while(sklad.isEmptyBanan()){
				System.out.println("Zarejdam magazina s banani.");
				synchronized(sklad){
					try{
						sklad.wait();
					}catch(InterruptedException e){
						e.printStackTrace();
					}
				}
			}
			
			try{
				Thread.sleep(10);
				synchronized(sklad){
					if(!sklad.isEmptyBanan()){
						System.out.println("Sega zaredih tova " + sklad.sellFruit());
					}
				}
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
		
	}

}
