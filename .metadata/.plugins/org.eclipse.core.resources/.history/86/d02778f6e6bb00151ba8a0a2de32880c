package class_exercises;

public class Teacher extends Human{
	
	private double salary;
	private Subject subject;
	private boolean isNewTeacher;
	
	public Teacher(String name, String surname, double salary, Subject subject) {
		super(name, surname);
		setSalary(salary);
		this.getSubject().setSubName(subject.getSubName());
	}

	
	public double getSalary() {
		return salary;
	}
	public void setSalary(double salary) {
		if(salary > 500){
			this.salary = salary;
			this.isNewTeacher = false;
		}else{
			this.salary = salary;
			this.isNewTeacher = true;
		}
	}
	
	
	public int Teach(int teaching){
		System.out.println("The teacher " + this.getName() + " is teaching " + this.getSubject() + ".");
		if(teaching < 30 || teaching > 100){
			teaching = 30;
		}
		return teaching;
	}
	
	
	public void Test(){
		System.out.println("The teacher " + this.getName() + " held an exam in class.");
	}


	public Subject getSubject() {
		return subject;
	}


	public void setSubject(Subject subject) {
		this.subject = subject;
	}
}
