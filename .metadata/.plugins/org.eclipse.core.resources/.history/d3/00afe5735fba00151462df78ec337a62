		Task task5 = new Task("task5",0);
		Task task6 = new Task("task6",0);
		Task task7 = new Task("task7",0);
		Task task8 = new Task("task8",0);
		Task task9 = new Task("task9",0);
		Task task10 = new Task("task10",0);
		
		AllWork tasks = new AllWork();
		tasks.addTask(task1);
		tasks.addTask(task2);
		tasks.addTask(task3);
		tasks.addTask(task4);
		tasks.addTask(task5);
		tasks.addTask(task6);
		tasks.addTask(task7);
		tasks.addTask(task8);
		tasks.addTask(task9);
		tasks.addTask(task10);
		
		Employee spas = new Employee("Spas");
		spas.setAllWork(tasks);
		spas.setHoursLeftForToday(8);
		System.out.println(spas.getAllWork().getCurrentUnassignedTask());
		
		System.out.println(tasks.isAllWorkDone());
