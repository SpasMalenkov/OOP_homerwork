package carpartsshop;

import java.text.SimpleDateFormat;
import java.util.Date;

public class Car {
	
	
	String name;
	Date yearOfManifacturing;
	
	
	public Car(String name, Date yearOfManifacturing) {
		this.name = name;
		this.yearOfManifacturing = yearOfManifacturing;
	}
	
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public Date getYearOfManifacturing() {
		return yearOfManifacturing;
	}
	public void setYearOfManifacturing(String yearOfManifacturing) {
		SimpleDateFormat sdf = new SimpleDateFormat("dd-M-yyyy");
		this.yearOfManifacturing = sdf.parse(yearOfManifacturing);
	}
	
}
