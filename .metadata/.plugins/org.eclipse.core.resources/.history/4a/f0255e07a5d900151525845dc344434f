package music_shop;

public class Customer implements Runnable{
	
	private IShop shop;
	
	Customer(IShop shop){
		this.shop = shop;
	}
	
	public void run() {
		try{
			Thread.sleep(10);
			
			int quantity = 1;
			int number = (int) (Math.random() * 9);
			String product = null;
			switch(number){
			case 0:
				product = "violin";
				break;
			case 1:
				product = "viola";
				break;
			case 2:
				product = "contrabass";
				break;
			case 3:
				product = "drums";
				break;
			case 4:
				product = "timpani";
				break;
			case 5: 
				product = "tarambuka";
				break;
			case 6:
				product = "bagpipe";
				break;
			case 7:
				product = "waldhorn";
				break;
			case 8:
				product = "saxophone";
				break;
			}
			this.shop.sellInstrument(product, quantity);
		}catch (Exception e){
			e.printStackTrace();
		}
		
	}
}
