package warehouse;

import java.util.HashMap;
import java.util.Map;
import java.util.Stack;

public class WareHouse implements IWareHouse {
	
	private static final String BANAN = "banan";
	private static final String ORANGE = "orange";
	private static final String APPLE = "apple";
	
	Stack<Fruit> banan = new Stack<Fruit>();
	{
		for(int i = 1; i <= 15; i++){
			try {
				banan.push(new Fruit("banan" + i, this));
			} catch (FruitException e) {
				e.printStackTrace();
			}
		}
	}
	Stack<Fruit> orange = new Stack<Fruit>();
	{
		for(int i = 1; i <= 15; i++){
			try {
				banan.push(new Fruit("banan" + i, this));
			} catch (FruitException e) {
				e.printStackTrace();
			}
		}
	}
	Stack<Fruit> apple = new Stack<Fruit>();
	{
		for(int i = 1; i <= 15; i++){
			try {
				banan.push(new Fruit("banan" + i, this));
			} catch (FruitException e) {
				e.printStackTrace();
			}
		}
	}
	
	Map<String, Stack<Fruit>> fruits = new HashMap<String, Stack<Fruit>>();
	
	WareHouse(){
		fruits.put(BANAN, banan);
		fruits.put(ORANGE, orange);
		fruits.put(APPLE, apple);
	}
	
	public void printStorage(){
		System.out.println(this.fruits.get(ORANGE).size());
		System.out.println(this.fruits.get(BANAN).size());
		System.out.println(this.fruits.get(APPLE).size());
	}
	
	
}
