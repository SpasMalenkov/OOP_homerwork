public class WareHouse implements IWareHouse {
	
	private static final String BANAN = "banan";
	private static final String ORANGE = "orange";
	private static final String APPLE = "apple";
	private static final String POTATO = "potato";
	private static final String EGGPLANT = "eggplant";
	private static final String CUCUMBER = "cucumber";
	
	Map<String, Stack<Product>> product = new HashMap<String, Stack<Product>>();
	Map<String, Stack<Fruit>> fruits = new HashMap<String, Stack<Fruit>>();
	
	//znam che e grozno ama ne se setih za drug nachin
	Stack<Product> banan = new Stack<Product>();
	Stack<Product> orange = new Stack<Product>();
	Stack<Product> apple = new Stack<Product>();
	Stack<Product> potato = new Stack<Product>();
	Stack<Product> eggplant = new Stack<Product>();
	Stack<Product> cucumber = new Stack<Product>();
