package person_student_employee;

public class Program {

	public static void main(String[] args) {
		
		Person spas = new Person("Spas", 24, true);
		Person maria = new Person("Maria", 24, false);
		Student vasil = new Student("Vasil", 14, true, 4.5);
		Student cecko = new Student("Cvetomir", 12, true, 6);
		Employee toshko = new Employee("Todor", 17, true, 60);
		Employee vladi = new Employee("Vladimir", 30, true, 75);
		
		Person[] persons = new Person[10];
		persons[0] = spas;
		persons[1] = maria;
		persons[2] = vasil;
		persons[3] = cecko;
		persons[4] = toshko;
		persons[5] = vladi;
		
		for(int i = 0; i < persons.length; i++){
			
			if(persons[i] != null){
				if(persons[i].equals(Student.class)){
					
					((Student) persons[i]).showStudentInfo();
					
				}
				if(persons[i].equals(Employee.class)){
					
					((Employee) persons[i]).showEmployeeInfo();
					
				}else{
					
					persons[i].showPersonInfo();
					
				}
			}else{
				System.out.println("It is empty object");
			}
		}
	}

}
