package class_exercises;

public class Student extends Human{
	
	static private int MAX_KNOWLEDGE = 100;
	private StudentSubject studentSubject;// = new StudentSubject[10];
	
	
	public Student(String name, String surname) {
		super(name, surname);
	}
	
	
	public void Study(int studyKnowledge){
		if(studyKnowledge < 0){
			this.studentSubject.learn(0);
		}else{
			this.studentSubject.learn(studyKnowledge);
		}
	}
	
	
	public void StudyHome(int studyKnowledge){
		if(studyKnowledge < 0){
			this.Study(0);
		}else if(studyKnowledge > (MAX_KNOWLEDGE - this.studentSubject.getKnowledge())){
			this.Study(MAX_KNOWLEDGE - this.studentSubject.getKnowledge());
		}else{
			this.Study(studyKnowledge);
		}
	}
	
	
}
