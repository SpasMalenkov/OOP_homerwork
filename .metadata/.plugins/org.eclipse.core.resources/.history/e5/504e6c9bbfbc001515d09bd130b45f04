package carpartsshop;

import java.text.DateFormat;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

public class Car {
	
	String name;
	Date yearOfManifacturing;
	
	
	public Car(String name, String yearOfManifacturing) throws ParseException {
		this.setName(name);
		this.setYearOfManifacturing(yearOfManifacturing);
	}
	
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	
	
	public Date getYearOfManifacturing() {
		return yearOfManifacturing;
	}
	public void setYearOfManifacturing(String yearOfManifacturing) throws ParseException {
		DateFormat sdf = new SimpleDateFormat("dd mm yyyy");
		this.yearOfManifacturing = sdf.parse(yearOfManifacturing);
	}
	
}
