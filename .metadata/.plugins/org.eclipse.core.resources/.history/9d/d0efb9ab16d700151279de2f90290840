package warehouse;

import java.util.HashMap;
import java.util.Map;

public class Supplier implements Runnable{
	
	private static final int HOW_MUCH_TO_SUPPLY = 25;
	private WareHouse warehouse;
	
	Map<Product, Integer> products = new HashMap<Product, Integer>();
	
	Supplier(WareHouse warehouse){
		this.warehouse = warehouse;
		for(String productName : new String[]{"banan", "orange", "apple"}){
			products.put(new Product(productName, FoodProduct.FRUITS), HOW_MUCH_TO_SUPPLY);
		}
		for(String productName : new String[]{"potato", "eggplant","cucumber"}){
			products.put(new Product(productName, FoodProduct.VEGETABLES), HOW_MUCH_TO_SUPPLY);
		}
		
		for(String productName : new String[]{"pork", "beef","chicken"}){
			products.put(new Product(productName, FoodProduct.MEATS), HOW_MUCH_TO_SUPPLY);
		}
	}
	

	@Override
	public void run() {
		for(!Thread.currentThread().isInterrupted();){
			while(warehouse.doNotNeedNewSupplies()){
				try{
					synchronized(warehouse){
						warehouse.wait();
					}
				}catch (InterruptedException e){
					e.printStackTrace();
					return;
				}
			}
			
			while(warehouse.needNewSupplies()){
				
			}
		
	}
	
	
	
}
