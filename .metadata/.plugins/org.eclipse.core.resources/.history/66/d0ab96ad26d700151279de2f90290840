package warehouse;

public class Demo {

	public static void main(String[] args) {
		IShoppingCenter warehouse = new WareHouse();
		
		Shop[] shops = new Shop[3];
		for(int i = 0; i < 3; i++){
			shops[i] = new Shop(warehouse);
		}
		
		
		Thread supplier = new Thread(new Supplier(warehouse));
		supplier.start();
		Thread client1 = new Thread(new Client(shops[0], supplier));
		Thread client2 = new Thread(new Client(shops[0], supplier));
		Thread client3 = new Thread(new Client(shops[0], supplier));
		Thread client4 = new Thread(new Client(shops[1], supplier));
		Thread client5 = new Thread(new Client(shops[1], supplier));
		Thread client6 = new Thread(new Client(shops[1], supplier));
		Thread client7 = new Thread(new Client(shops[2], supplier));
		Thread client8 = new Thread(new Client(shops[2], supplier));
		Thread client9 = new Thread(new Client(shops[2], supplier));
		
		for(int i = 1; i < 3; i++){
			client1.start();
			client2.start();
			client3.start();
			
			client4.start();
			client5.start();
			client6.start();
			
			client7.start();
			client8.start();
			client9.start();
		}
		
	}
}
